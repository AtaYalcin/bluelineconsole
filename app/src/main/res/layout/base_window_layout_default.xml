<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/baseWindowMainLayoutRoot"
    android:animateLayoutChanges="true"
    android:focusable="false"
    android:focusableInTouchMode="false"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".applicationMain.BaseWindowActivity"
    >
    <LinearLayout
        android:id="@+id/baseWindowRootLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:animateLayoutChanges="true"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        android:orientation="vertical"
        android:focusable="false"
        android:focusableInTouchMode="false"
        >
        <LinearLayout
            android:id="@+id/baseWindowHeaderWrapper"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_gravity="start"
            android:orientation="horizontal"
            android:animateLayoutChanges="true"
            >
            <LinearLayout
                android:layout_width="3sp"
                android:layout_height="match_parent"
                android:id="@+id/baseWindowDefaultThemeHeaderStartAccent"
                android:background="?bluelineconsoleAccentColor"
                android:orientation="horizontal"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/main_header_background"
                android:orientation="vertical">
                <!-- Sizes here must be consistent with corresponding drawables -->
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/baseWindowDefaultThemeHeaderAccent"
                    android:background="@drawable/main_header_accent"
                    tools:ignore="ContentDescription"
                    />
                <TextView
                    android:clickable="false"
                    android:id="@+id/baseWindowMainHeaderTextView"
                    android:layout_width="130sp"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal|top"
                    android:textColor="?bluelineconsoleFrameTextColor"
                    android:textStyle="bold"
                    android:layout_gravity="start"
                    android:text=""
                    android:textSize="12sp"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/baseWindowMainLinearLayoutOuter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="0sp"
            android:paddingHorizontal="3sp"
            android:layout_marginBottom="18sp"
            android:background="?bluelineconsoleAccentColor"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:animateLayoutChanges="true"
            >
            <LinearLayout
                android:id="@+id/baseWindowMainLinearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="6dp"
                android:paddingHorizontal="7dp"
                android:layout_margin="0px"
                android:orientation="vertical"
                android:background="?bluelineconsoleFrameColor"
                android:animateLayoutChanges="true"
                >
                <ViewStub
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/baseWindowMainViewStub"
                    android:animateLayoutChanges="true"
                    />
            </LinearLayout>
        </LinearLayout>
        <!--
          To fill the gap between baseWindowFooterWrapper and View just above,
          layout_marginTop is actually set to -(18sp + 1 physical pixel).
          BaseWindowActivity.onCreate() decrease 1 physical pixel from layout_marginTop.
        -->
        <LinearLayout
            android:id="@+id/baseWindowFooterWrapper"
            android:layout_width="wrap_content"
            android:layout_height="18sp"
            android:layout_marginTop="-18sp"
            android:layout_gravity="end"
            android:orientation="horizontal"
            android:animateLayoutChanges="true"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/main_footer_background"
                android:orientation="vertical">
                <!-- Sizes here must be consistent with corresponding drawables -->
                <TextView
                    android:clickable="false"
                    android:id="@+id/baseWindowMainFooterTextView"
                    android:layout_width="130sp"
                    android:layout_height="15sp"
                    android:paddingBottom="1sp"
                    android:gravity="center_horizontal|bottom"
                    android:textStyle="bold"
                    android:textColor="?bluelineconsoleFrameTextColor"
                    android:layout_gravity="end"
                    android:text=""
                    android:textSize="12sp"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    />
                <!-- To place accent color strictly at bottom of main_footer_background, consume all remaining space -->
                <Space
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    />
                <ImageView
                    android:id="@+id/baseWindowDefaultThemeFooterAccent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/main_footer_accent"
                    tools:ignore="ContentDescription"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/baseWindowDefaultThemeFooterEndAccent"
                android:layout_width="3sp"
                android:layout_height="match_parent"
                android:background="?bluelineconsoleAccentColor"
                android:orientation="vertical"
                />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
